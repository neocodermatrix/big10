<h1>SHOW EVENT PAGE: Welcome to <%= @event.name %>'s page</h1>

<ul>
	<li>
		<%= @event.name %><br>
		<%= @event.description %><br>
		<%= @event.address %><br>
		<%= @event.city %><br>
		<%= @event.state %><br>
		<%= @event.zip %><br>
		<%= @event.cost %><br>
		<%= @event.attendees %><br>
		<%= @event.start_date %><br>
		<%= @event.end_date %><br>
	</li>
</ul>

<%#= link_to "Add Post", new_post_path %><br>
<div>
	<%#= render 'posts/post_form' %>
</div>

<div>
	<%# @post do |p| %>
	<li>
		<%#= p.title %>
	</li> 
	<%# end %>
</div>



<div>
<%#= form_for @post do |p| %>

	<div>
		<%#= p.label "Title", :title %>
		<%#= p.text_field :title %>
	</div>
	
	<div>
		<%#= p.label "Body", :body %>
		<%#= p.text_area :body %>
	</div>

	<%#----->= hidden_field_tag "event_id", @event.id %>

	</div>
		<%#= p.submit "Submit" %>
<%# end %>
</div>





<br>
<%#= @event.users %>

<% if current_user == @event.creator %>
<%= link_to "Edit Event", edit_event_path %><br>
<% end %>

<% if logged_in? %>
<% unless @user_attending %>
<%= link_to "Join Event", attend_event_path(@event), method: :post %>
<% end %>	
<% end %>

<% if @user_attending %>
<%= link_to "Leave Event", leave_event_path(@event), method: :delete %>
<% end %>

<h4>List of Attendees</h4>
<ul>
	<% @event.users.each do |f| %>
		<li>
			<%= f.name %>
		</li>
	<% end %>
</ul>

<%#= @user_attending %>



